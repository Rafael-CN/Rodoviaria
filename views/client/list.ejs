<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <%-include("../shared/imports.ejs")%>
  </head>
  <body class="vh-100 blue-gradient">
    <%-include("../shared/header.ejs")%>

    <div
      class="container h-75 d-flex justify-content-center align-items-center"
    >
      <div class="card col-10 border-black">
        <div class="card-header bg-black text-white">
            <h6 class="mt-2 p-1">LISTAGEM DE CLIENTES</h3>
          </div>
          <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Data de nascimento</th>
                        <th>CPF</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    <%Clientes.forEach(function (cliente) {%>
                    <%if (cliente.cpf) {%>
                        <tr>
                            <td><%=cliente.nome%></td>
                            <td><%=moment(cliente.dataNascimento).format('DD/MM/YYYY')%></td>
                            <td><%=cliente.cpf%></td>
                            <td><%=cliente.email%></td>
                        </tr>
                    <%}%>
                    <%})%>
                </tbody>
            </table>
          </div>
      </div>
    </div>
  </body>
</html>
