<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <%-include("../shared/imports.ejs")%>
  </head>
  <body class="vh-100 blue-gradient">
    <%-include("../shared/header.ejs")%>

    <div
      class="container h-75 d-flex justify-content-center align-items-center"
    >
      <div class="card col-8 border-black">
        <div
          class="card-header bg-black text-white d-flex justify-content-between"
        >
          <h6 class="mt-2 p-1">CADASTRO DE CLIENTES</h6>
          <a class="btn btn-light" href="/cliente/listagem">LISTAGEM</a>
        </div>
        <form action="/cliente/cadastro" method="post">
          <input
            type="hidden"
            name="id"
            id="id"
            value="<%= Cliente ? Cliente._id : '' %>"
          />

          <div class="card-body p-4">
            <div class="row mt-2 mb-3 px-3">
              <div class="col-8">
                <div class="form-floating">
                  <input
                    type="text"
                    class="form-control"
                    name="nome"
                    id="nome"
                    placeholder="Nome"
                    value="<%= Cliente ? Cliente.nome : ''%>"
                  />
                  <label for="nome">Nome</label>
                </div>
              </div>
              <div class="col-4">
                <div class="form-floating">
                  <input
                    type="date"
                    class="form-control"
                    name="dataNascimento"
                    id="dataNascimento"
                    placeholder="Data de nascimento"
                    value="<%= Cliente ? moment(Cliente.dataNascimento).format('YYYY-MM-DD') : ''%>"
                  />
                  <label for="dataNascimento">Data de nascimento</label>
                </div>
              </div>
            </div>
            <div class="row mb-3 px-3">
              <div class="col-5">
                <div class="form-floating">
                  <input
                    type="text"
                    class="form-control"
                    name="cpf"
                    id="cpf"
                    placeholder="CPF"
                    value="<%= Cliente ? Cliente.cpf : ''%>"
                  />
                  <label for="cpf">CPF</label>
                </div>
              </div>
              <div class="col-7">
                <div class="form-floating">
                  <input
                    type="email"
                    class="form-control"
                    name="email"
                    id="email"
                    placeholder="Email"
                    value="<%= Cliente ? Cliente.email : ''%>"
                  />
                  <label for="email">Email</label>
                </div>
              </div>
            </div>
            <div class="row d-flex justify-content-center mt-4">
              <button type="submit" class="btn btn-success col-2">
                Cadastrar
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
